<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <ImageView
        android:layout_width="25dp"
        android:layout_height="33dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="47dp"
        android:src="@drawable/domino" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-29dp"
        android:text="Domino's"
        android:layout_marginLeft="50dp"
        android:textColor="#006490"
        android:textSize="16sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="381dp"
        android:layout_height="81dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="30dp">


        <ImageView
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/discount" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Personalized"
            android:textSize="10sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-60dp"
            android:layout_marginTop="36dp"
            android:text="Offer"
            android:textSize="10sp" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/piza1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="20dp"
            android:text="Loyalty"
            android:textSize="10sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-40dp"
            android:layout_marginTop="36dp"
            android:text="Rewards"
            android:textSize="10sp" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/payment" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="  Easy"
            android:textSize="10sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-25dp"
            android:layout_marginTop="36dp"
            android:text="Payments"
            android:textSize="10sp" />


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="332dp"
        android:layout_marginTop="-153dp"
        android:text="Skip"
        android:textColor="#006490"
        android:textSize="10sp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="139dp"
        android:text="Login to unlock awsesome benefits" />


    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="60dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/outline" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:text="+91"
            android:textSize="22dp"
            android:textColor="@color/black"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="number"
            android:backgroundTint="@color/white"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="101dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/white"

        android:layout_marginLeft="32dp"
        android:layout_marginTop="-70dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mobile Number"
            android:textSize="11dp"
            android:textColorHint="@color/white"
            android:textColor="#3F51B5" />


    </LinearLayout>

    <TextView
        android:layout_width="178dp"
        android:layout_height="20dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="455dp"
        android:text="By going forword you accept"
        android:textSize="10sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_marginLeft="217dp"
        android:layout_marginTop="-20dp"
        android:text="Terms and Conditions"
        android:textColor="#3F51B5"
        android:textSize="12dp" />

    <Button
        android:id="@+id/button1"
        android:layout_width="330dp"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#7A7A7A"
        android:text="Send OTP"
        android:textSize="12dp"
        android:background="@drawable/cona"
        android:textColor="@color/white" />


</LinearLayout>